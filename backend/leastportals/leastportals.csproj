<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
	<LangVersion>7.1</LangVersion>
	<RuntimeFrameworkVersion>2.0.0</RuntimeFrameworkVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <ProjectReference Include="../lib/Portal2Boards.Net/src/Portal2Boards.Net/Portal2Boards.Net.csproj" />
    <ProjectReference Include="../lib/SteamCommunity.Net/src/SteamCommunity.Net/SteamCommunity.Net.csproj" />
  </ItemGroup>

  <Target Name="CopyCustomContent" AfterTargets="AfterBuild">
    <Copy SourceFiles="lp_stats.json" DestinationFolder="$(OutDir)" />
    <Copy SourceFiles="lp_wrs.json" DestinationFolder="$(OutDir)" />
  </Target>
  <Target Name="CopyCustomContentOnPublish" AfterTargets="Publish">
    <Copy SourceFiles="lp_stats.json" DestinationFolder="$(PublishDir)" />
    <Copy SourceFiles="lp_wrs.json" DestinationFolder="$(PublishDir)" />
  </Target>

</Project>
